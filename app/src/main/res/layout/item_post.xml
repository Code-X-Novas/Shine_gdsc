<!-- item_post.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder_image"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/captionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_below="@id/postImageView"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/likesCommentsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/captionTextView"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/likesIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like"
            android:layout_gravity="center_vertical"
            android:tint="@color/likeIconColor"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/likesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text="Likes: 0"
            android:layout_marginEnd="16dp" />

        <ImageView
            android:id="@+id/commentsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment"
            android:layout_gravity="center_vertical"
            android:tint="@color/commentIconColor"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/commentsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text="Comments: 0" />
    </LinearLayout>

    <Button
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:layout_below="@id/likesCommentsLayout"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/commentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:layout_below="@id/likesCommentsLayout"
        android:layout_toEndOf="@id/likeButton"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp" />

</RelativeLayout>
