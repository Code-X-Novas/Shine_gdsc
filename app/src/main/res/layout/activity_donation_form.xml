<?xml version="1.0" encoding="utf-8"?>
<!-- activity_donation_form.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F0FF">

    <ImageView
        android:id="@+id/image_donation"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/donate_money_page"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp">

    </ImageView>
    <EditText
        android:layout_below="@+id/image_donation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/editTextName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Enter your name" />

    <!-- EditText field for address -->
    <EditText
        android:layout_below="@id/editTextName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/editTextAddress"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Enter your address" />

    <EditText
        android:id="@+id/feedback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/editTextAddress"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Enter your feedback" />


    <!-- EditText field for amount -->
    <EditText
        android:id="@+id/editTextAmount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/feedback"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Enter donation amount"
        android:inputType="numberDecimal" />

    <!-- Button for initiating Google Pay payment -->
    <Button
        android:id="@+id/payButton"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextAmount"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay with Gpay" />

</RelativeLayout>
